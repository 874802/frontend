    <title>Login</title>
    <link rel="stylesheet" href="/styles.css">
    <script>
      document.addEventListener("DOMContentLoaded", function () {
          const emailInput = document.querySelector("#email") as HTMLInputElement | null;
          const loginButtonGroup = document.querySelector(".submit-group");
          const loginForm = document.querySelector(".form");
          //const forgotGroup = document.querySelector(".forgot-group");
          if (!emailInput || !loginButtonGroup || !loginForm ) {
              console.error("‚ùå Uno o m√°s elementos del formulario no se encontraron en el DOM."); //Depuraci√≥n
              return;
          }

          let errorMessage = document.getElementById("error-message") as HTMLParagraphElement | null;
          if (!errorMessage) {
              errorMessage = document.createElement("p");
              errorMessage.id = "error-message";
              errorMessage.style.color = "red";
              errorMessage.style.display = "none";
              loginForm.appendChild(errorMessage);
          }

          emailInput.addEventListener("click", function () {
              loginButtonGroup.classList.add("show");
          });

          loginForm.addEventListener("submit", async function (event) {
              event.preventDefault();

              const email = emailInput.value.trim();

              console.log("üì© Enviando datos:", { email }); // üîç Verifica los datos antes de enviar, depuraci√≥n

              if (!email) {
                  console.warn("‚ö†Ô∏è Campos vac√≠os en el formulario."); //Depuraci√≥n
                  errorMessage.textContent = "Por favor, complete ambos campos.";
                  errorMessage.style.display = "block";
                  return;
              }

              // Hashear la contrase√±a antes de enviarla

              try {
                  const response = await fetch("http://galaxy.t2dc.es:3000/auth/forgot-password", {
                      method: "POST",
                      headers: {
                          "Content-Type": "application/json"
                      },
                      body: JSON.stringify({ email })
                  });

                  console.log("üì° Respuesta recibida:", response.status, response.statusText);

                  const data = await response.json();
                  console.log("üìä Datos de la API:", data); // üîç Verifica la respuesta de la API, depuraci√≥n

                  if (response.ok) {
                      console.log("‚úÖCorreo enviado:");
                      window.location.href = "/";
                  } else {
                      console.warn("‚ö†Ô∏è Error en la autenticaci√≥n:", data.message);
                      errorMessage.textContent = data.message || "Error al iniciar sesi√≥n"; //Todo esto es depuraci√≥n
                      errorMessage.style.display = "block";
                  }
              } catch (error) {
                  console.error("‚ùå Error en la solicitud:", error);
                  errorMessage.textContent = "Error en la conexi√≥n con el servidor";
                  errorMessage.style.display = "block";
              }
          });
      });

    </script>
