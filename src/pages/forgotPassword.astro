export const prerender = false;

import { getUserIdFromAccessToken } from "../utils/auth";

export const onRequest = (context: any, next: any) => {
  const isAuthenticated = getUserIdFromAccessToken();
  if (!isAuthenticated) {
    return context.redirect('/login');
  }
  return next();
};
